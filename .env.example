# =============================================
# FLASK CONFIGURATION
# =============================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key

# =============================================
# DATABASE CONFIGURATION (PostgreSQL Local)
# =============================================
POSTGRES_HOST=your_db_host
POSTGRES_PORT=5432
POSTGRES_DB=dns_shield
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# =============================================
# REDIS CONFIGURATION (Docker)
# =============================================
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=''
REDIS_CACHE_TTL=86400

# =============================================
# BERT MODEL CONFIGURATION
# =============================================
BERT_MODEL=bert-base-multilingual-cased
BERT_MAX_LENGTH=128
BERT_DEVICE=cpu
BERT_BATCH_SIZE=32
BERT_PCA_DIM=256

# =============================================
# DGA CONFIGURATION
# =============================================
DGA_ENTROPY_THRESHOLD=4.5
DGA_LENGTH_THRESHOLD=25
DGA_CV_RATIO_LOW=0.4
DGA_CV_RATIO_HIGH=2.5
DGA_SCORE_THRESHOLD=0.65

# =============================================
# ENSEMBLE ML CONFIGURATION
# =============================================
ENSEMBLE_THRESHOLD=0.65
LSTM_MODEL_PATH=models/lstm/lstm_model.h5
GRU_MODEL_PATH=models/gru/gru_model.h5
RF_MODEL_PATH=models/rf/rf_model_tuned.pkl
LSTM_WEIGHT=0.33
GRU_WEIGHT=0.33
RF_WEIGHT=0.34

# =============================================
# LOGGING CONFIGURATION
# =============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================
# API CONFIGURATION
# =============================================
API_HOST=0.0.0.0
API_PORT=9000
API_WORKERS=4
API_TIMEOUT=30
MAX_REQUESTS_PER_SECOND=1000

# =============================================
# MONITORING CONFIGURATION
# =============================================
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9100
METRICS_NAMESPACE=dns_shield

# =============================================
# GRAFANA CONFIGURATION
# =============================================
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password
GRAFANA_DATASOURCE=dns_shield_prometheus
GRAFANA_DASHBOARD_JSON=config/grafana/dashboards/dns-shield-overview.json

# =============================================
# SECURITY CONFIGURATION
# =============================================
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60
